<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="ffmusic.com.ffmusicapp.controller.LoginActivity">


    <TextView
        android:id="@+id/name_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="@string/name_app"
        android:textSize="50dp"
        android:fontFamily="Billabong"
        android:textStyle="italic"
        android:textColor="@color/white_color"
        />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:textSize="14dp"
        android:layout_width="@dimen/fb_button_width"
        android:layout_height="@dimen/fb_button_height"
        android:layout_above="@+id/sign_in_button"
        android:layout_alignRight="@+id/sign_in_button"
        android:layout_alignEnd="@+id/sign_in_button"
        android:layout_marginBottom="16dp"
        android:layout_alignLeft="@+id/sign_in_button"
        android:layout_alignStart="@+id/sign_in_button" />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:textSize="14dp"
        android:layout_width="@dimen/google_button_width"
        android:layout_height="@dimen/google_button_height"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:tag=""/>

</RelativeLayout>
