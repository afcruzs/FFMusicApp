<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/image_song"
            android:layout_width="@dimen/image_list_width"
            android:layout_height="@dimen/image_list_height"
            android:scaleType="centerCrop"
            android:src="@drawable/music_note_image"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/name_song"
            android:layout_toRightOf="@+id/image_song"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/text_song_size"
            android:layout_marginLeft="15dp" />




    </RelativeLayout>
</android.support.v7.widget.CardView>