<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardView_height"
    card_view:cardElevation="1dp"
    android:layout_marginTop="3dp">


    <android.support.v7.widget.Toolbar
        android:id="@+id/play_list_menu_item_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardView_height"
        android:popupTheme="@style/ActionBarPopupThemeOverlay"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cardView_height"
        android:paddingTop="1dp">

        <ImageView
            android:id="@+id/image_song"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/test"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/name_song"
            android:layout_toRightOf="@+id/image_song"
            android:layout_toLeftOf="@+id/time"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_song_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/name_artist"
            android:layout_below="@+id/name_song"
            android:visibility="invisible"
            android:layout_alignLeft="@+id/name_song" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2:32"
            android:id="@+id/time"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_alignLeft="@+id/star" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/star"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:src="@android:drawable/star_off" />

    </RelativeLayout>
</android.support.v7.widget.CardView>